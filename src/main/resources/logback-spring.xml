<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--El patrÃ³n de log con colores -->
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} %highlight(%-5level) %yellow(%logger{36}) - %msg%n
            </pattern>
            <immediateFlush>true</immediateFlush>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
